#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define PXART_VERSION       $buddy_memory_allocator.version.project_number$ULL
#define PXART_VERSION_STR   "$buddy_memory_allocator.version.project$"
#define PXART_VERSION_ID    "$buddy_memory_allocator.version.project_id$"

#define PXART_VERSION_MAJOR $buddy_memory_allocator.version.major$
#define PXART_VERSION_MINOR $buddy_memory_allocator.version.minor$
#define PXART_VERSION_PATCH $buddy_memory_allocator.version.patch$

#define PXART_PRE_RELEASE   $buddy_memory_allocator.version.pre_release$

#define PXART_SNAPSHOT_SN   $buddy_memory_allocator.version.snapshot_sn$ULL
#define PXART_SNAPSHOT_ID   "$buddy_memory_allocator.version.snapshot_id$"
